{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths":{
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
    },
    "allowJs": true,
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue",
    "types/**/*.d.ts",
  ],
  "exclude": ["node_modules", "dist", "**/*.js"], 

  "references": [{ "path": "./tsconfig.node.json" }]
}
